MIVA_API_URL="https://example.test/mm5/json.mvc"
MIVA_API_STORE_CODE="STORE_CODE"
MIVA_API_ACCESS_TOKEN="your-access-token"
MIVA_API_PRIVATE_KEY="base64-private-key"

# Default headers (Authorization recommended as Basic base64_encode(\"username:password\"))
MIVA_API_HTTP_AUTH="Basic base64-credentials"
MIVA_API_HTTP_CACHE="no-cache"

# Set to false to disable TLS verification for dev stores
MIVA_API_HTTP_VERIFY=true

# Optional JSON map of additional headers, e.g. {"X-Debug":"1","Connection":"close"}
MIVA_API_HTTP_HEADERS=

# SSH authentication
MIVA_API_SSH_USERNAME="ssh-user"
MIVA_API_SSH_ALGORITHM="sha256"
# Path to a local private key file (required for SSH-auth tests)
MIVA_API_SSH_PRIVATE_KEY_PATH="~/.ssh/id_rsa"
# Set to true to run the live SSH-authenticated test (otherwise skipped)
MIVA_API_SSH_LIVE=false
